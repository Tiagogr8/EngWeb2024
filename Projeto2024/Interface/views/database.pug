extends layout

block content

    .w3-card-4
        header.w3-container.w3-blue(style="margin-bottom: 10px; display: flex; ")
            div(style="display: flex; align-items: center;")
                img(src="/images/voltar.png" alt="Back" style="width: 40px; height: 40px; cursor: pointer; margin-right: 10px;" onclick="window.location.href=localStorage.getItem('lastPage') || '/inquiricoes'") 
                h1(style="margin: 0;") Gest√£o de Base de Dados

        .w3-container
            if successMessage
                .w3-panel.w3-green
                    h3= successMessage
            if errorMessage
                .w3-panel.w3-red
                    h3= errorMessage

            form(action="/inquiricoes/database/import", method="POST", enctype="multipart/form-data")
                h2 Importar Dados
                label(for="backupPath") Indique o caminho para a diretoria:
                input(type="text", id="backupPath", name="path", placeholder="/caminho/para/diretoria/")
                div(style="margin-top: 10px;")
                    button(type="submit", class="button w3-button w3-blue w3-round-large", style="border-radius: 10px;") Importar

            form(action="/inquiricoes/database/export", method="POST")
                h2 Realizar Backup da Base de Dados
                button(type="submit", class="button w3-button w3-blue w3-round-large", style="border-radius: 10px;") Realizar Backup
