extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            div(style="display: flex; align-items: center;")
                img(src="/images/voltar.png" alt="Back" style="width: 40px; height: 40px; cursor: pointer; margin-right: 10px;" onclick=`window.location.href='/inquiricoes/${inquiricao._id}'`)
                h2 #{inquiricao.Name} - Posts

        .w3-container
            each post in posts
                .w3-card-4(style="margin-bottom: 10px;")
                    header.w3-container.w3-light-grey
                        h3 
                            a(href=`/inquiricoes/posts/${post._id}`) #{post.descricao}
                    .w3-container
                        p(style="font-size: 14px;") #{post.username} - #{new Date(post.createdAt).toLocaleString()}
