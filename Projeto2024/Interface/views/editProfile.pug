extends layout

block content
  .w3-card-4.w3-center
    header.w3-container.w3-blue(style="display: flex; justify-content: space-between; align-items: center;")
      img(src="/images/voltar.png" alt="Back" style="width: 40px; height: 40px; cursor: pointer; margin-right: 10px;" onclick="history.back()")
      h1(style="flex-grow: 1;")
        span Editar Perfil do Utilizador

    .w3-container(style="margin-top: 20px;")
      img(src="/images/PersonCircle.png" alt="Profile" style="width: 150px; height: 150px; border-radius: 50%; margin-top: 20px;")
      form(action="/profile/edit" method="POST")
        .w3-container(style="margin-top: 20px;")
          label(for="name") Nome:
          input.w3-input.w3-border(type="text" name="name" value=user.name required)

        .w3-container(style="margin-top: 20px;")
          label(for="email") Email:
          input.w3-input.w3-border(type="email" name="email" value=user.email required)

        button.w3-button.w3-blue.w3-round-large(type="submit" style="margin-top: 20px;margin-bottom: 20px;") Guardar Alterações
