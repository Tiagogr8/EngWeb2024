extends layout

block content
  .w3-card-4.w3-center
    header.w3-container.w3-blue(style="display: flex; justify-content: space-between; align-items: center;")
      a(href="/inquiricoes")
        img(src="/images/voltar.png" alt="Back" style="width: 40px; height: 40px; cursor: pointer; margin-right: 10px;")
      h1(style="flex-grow: 1;")
        span Perfil do Utilizador

    .w3-container(style="margin-top: 20px;")
      img(src="/images/PersonCircle.png" alt="Profile" style="width: 150px; height: 150px; border-radius: 50%; margin-top: 20px;")
      h2= user.name
      p Username: #{user.username}
      p Email: #{user.email}
      a.w3-button.w3-blue.w3-round-large(href="/profile/edit", style="margin-top: 20px; margin-bottom: 20px;") Editar Informações
